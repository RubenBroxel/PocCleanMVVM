<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocCleanMVVM.MainPage"
             BackgroundColor="#F0F0F5">

    <Grid ColumnDefinitions="240, *" RowDefinitions="*">
        <!-- Sidebar Menu -->
        <VerticalStackLayout BackgroundColor="#2C2C2E" Padding="20" Spacing="25">
            <Label Text="ElegantApp" FontSize="24" TextColor="White" FontAttributes="Bold"/>
            <Button Text="🏠 Dashboard" TextColor="White" BackgroundColor="Transparent" Clicked="DashboardClicked"/>
            <Button Text="⚙️ Settings" TextColor="White" BackgroundColor="Transparent" Clicked="SettingsClicked"/>
        </VerticalStackLayout>

        <!-- Main content area -->
        <ContentView x:Name="ContentArea" Grid.Column="1" BackgroundColor="White"/>
    </Grid>

    
</ContentPage>
