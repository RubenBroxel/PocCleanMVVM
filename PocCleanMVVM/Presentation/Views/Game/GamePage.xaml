<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocCleanMVVM.Presentation.Views.GamePage"
             Title="Juego de Avión"
             BackgroundColor="Black">

    <AbsoluteLayout x:Name="GameArea">

        <!-- Imagen del avión -->
        <Image x:Name="Avion"
               Source="download.png"
               WidthRequest="64" 
               HeightRequest="64" 
               AbsoluteLayout.LayoutBounds="0.5, 0.8, 64, 64" 
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <!-- Botón para mover a la izquierda -->
        <Button Text="←"
                AbsoluteLayout.LayoutBounds="0.1, 0.9, 100, 50" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnMoveLeft" />

        <!-- Botón para mover a la derecha -->
        <Button Text="→"
                AbsoluteLayout.LayoutBounds="0.9, 0.9, 100, 50" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnMoveRight" />

        <!-- Botón para detener el movimiento (opcional) -->
        <Button Text="Stop"
                AbsoluteLayout.LayoutBounds="0.5, 0.95, 100, 50" 
                AbsoluteLayout.LayoutFlags="PositionProportional"
                Clicked="OnMoveStop" />

    </AbsoluteLayout>
</ContentPage>
